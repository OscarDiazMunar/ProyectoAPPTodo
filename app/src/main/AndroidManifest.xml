<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oscar.proyectoapptodo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/brote"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/brote"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Presentations.login.implementations.LoginActivity"
            android:theme="@style/AppThemeA">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Presentations.MainTabActivity.implementations.MainTabActivity"
            android:label="@string/title_activity_main_tab"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>